# 增广规则
pattern -> term

term -> anto
term -> wrap
term -> alter
term -> text


# 包装
wrap -> ( term )

# 反义
anto -> anti-anto term

# 歧义
ambi -> term anti-ambi

# 句式
term -> term .{m,n} term

# 并列
alter -> term | term


# 歧义、反义修饰符只能是纯文本结构
anti-anto -> (?<! alter0 )
anti-ambi -> (?&! alter0 )

# 纯文本结构的包装
focus0 -> ( alter0 )

# 纯文本结构
alter0 -> alter0 | term0
alter0 -> term0

# 纯文本
term0 -> text
